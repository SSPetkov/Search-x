{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@styles/*": [
        "../styles/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}
